{{ 'spinWheel.css' | asset_url | stylesheet_tag }}

<script defer src="https://d3js.org/d3.v3.min.js" charset="utf-8"></script>


<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" integrity="sha512-xh6O/CkQoPOWDdYTDqeRdPCVd1SpvCA9XXcUnZS2FmJNp1coAFzvtCN9BmamE+4aHK8yyUHUSCcJHgXloTyT2A==" crossorigin="anonymous" referrerpolicy="no-referrer" />


<div style="position: fixed; bottom: 0; right: 0;" id="spinnWheel" class="spinnWheel">
    <div class="main" id="mainSpinnner" style="position:relative ;">
        <div id="closeSpinDiv">

            <i class="fa fa-close" id="closeSpin" style="font-size:36px"> </i>

                </div>
                 <div class="spinCounterDiv">
                        <p id="spinCounter"></p>
                    </div> 
                    <div class="spin_block" id="spin_block">
                        <div id="chart">
                            </div>
                                <div class="offerDisp">

                                    <div id="offerText">
                                        <h1></h1>
                                    </div>
                                    <div class="formBlock" id="formBlock">
                                        <form name="myform">
                                            <label for="email"> Enter Email to SPIN : </label>
                                                <input type="text" id="spinner-email" name="email"> <input type="text"
                                                        id="spinnerCode" name="spinnerCode" readonly>
                                                    <button type="button" class="submitSpin" id="submitSpin"> Spin 
                                                        </button>
                                        </form>
                                </div>
                                </div>
                        </div>
                        <div class="image_block" style="position:absolute ;">
                            <img src="{{ 'pngwing.com.png' | asset_url | image_tag: shop.name }}" alt="Image"
                                id="spinnerImage" class="spinnerImage animate__animated animate__fadeInLeftBig"
                                loading="lazy" width="80" height="80">
                        </div>
                        </div>
                            <!-- <img src="{{ 'spinImage' | file_img_url: '150x' }}" alt=" Image" id="spinnerImage" class="spinnerImage animate__animated animate__fadeInLeftBig" loading="lazy" width="80" height="80"> -->
        </div>
        <script src="{{ 'spinWheel.js' | asset_url }}" defer> < /script>

            {% schema %}
            {
                "name": "Lucky Spin",
                    "target": "body",
                        "settings": [
                            {
                                "label": "Heading",
                                "id": "heading",
                                "type": "richtext",
                                "default": "<p>Hello from Heading</p>"
                            }
                        ]
            }
            {% endschema %}